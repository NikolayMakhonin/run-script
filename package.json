{
	"name": "@flemist/run-script",
	"version": "2.1.13",
	"description": "Use JavaScript instead npm scripts",
	"author": {
		"name": "Nikolay Makhonin",
		"url": "https://github.com/NikolayMakhonin/"
	},
	"homepage": "https://github.com/NikolayMakhonin/run-script/",
	"bugs": {
		"url": "https://github.com/NikolayMakhonin/run-script/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:NikolayMakhonin/run-script.git"
	},
	"license": "CC0-1.0",
	"keywords": [
		"npm",
		"run",
		"script",
		"scripts",
		"cli",
		"execute",
		"run-script",
		"javascript",
		"js",
		"parallel",
		"sequential",
		"helpers",
		"utils",
		"tools",
		"shell",
		"ci"
	],
	"files": [
		"dist/**"
	],
	"types": "dist/index.d.ts",
	"main": "dist/index.js",
	"bin": {
		"run-script": "./dist/run.js"
	},
	"engines": {
		"node": ">= 8.6.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepublishOnly": "npm run ci",
		"lint": "eslint \"./src/**/*.ts\"",
		"build": "shx rm -rf dist && tsc",
		"test": "mocha ./dist/**/*.test.js",
		"test:watch": "mocha --require ts-node/register ./src/**/*.test.ts --watch",
		"ci": "npm i && npm run lint && npm run build && npm run test"
	},
	"devDependencies": {
		"@types/assert": "^1.5.5",
		"@types/mocha": "^8.2.3",
		"@types/node": "^16.3.3",
		"@types/yargs": "^17.0.2",
		"@typescript-eslint/eslint-plugin": "^4.13.0",
		"@typescript-eslint/parser": "^4.13.0",
		"assert": "^2.0.0",
		"eslint": "^7.18.0",
		"eslint-config-pro": "^2.1.1",
		"eslint-plugin-sonarjs": "^0.9.1",
		"mocha": "^9.0.2",
		"shx": "^0.3.3",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@flemist/simple-tree-kill": "0.0.7",
		"kleur": "^4.1.1",
		"yargs": "^17.0.1"
	}
}
